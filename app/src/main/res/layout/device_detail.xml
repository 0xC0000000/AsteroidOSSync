<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/detail_horizontal_margin"
    android:paddingRight="@dimen/detail_horizontal_margin"
    android:paddingTop="@dimen/detail_vertical_margin"
    android:paddingBottom="@dimen/detail_vertical_margin">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp">

        <ImageView
            android:id="@+id/info_icon_connected"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:src="@mipmap/android_cloud"/>

        <TextView
            android:id="@+id/info_connected"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:text="@string/disconnected"
            android:layout_gravity="left"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/info_icon_connected"
            android:layout_marginLeft="10dp"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/info_icon_battery"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:src="@mipmap/battery_full"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/info_battery"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/info_icon_battery"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:visibility="invisible" />

    </LinearLayout>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view1"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/info_icon1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="16dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/android_image"/>

            <TextView
                android:id="@+id/info_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/info_icon1"
                android:layout_centerVertical="true"
                android:text="Grab a screenshot"
                android:textSize="16sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view2"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/info_icon2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="16dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/android_notifications"/>

            <TextView
                android:id="@+id/info_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/info_icon2"
                android:layout_centerVertical="true"
                android:text="Find my watch"
                android:textSize="16sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view3"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true" >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/info_icon3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="16dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/android_settings"/>

            <TextView
                android:id="@+id/info_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@+id/info_icon3"
                android:layout_centerVertical="true"
                android:text="Notifications settings"
                android:textSize="16sp"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>

